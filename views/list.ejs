<%- include('header'); %> 
    <div class="box" id="heading">
        <h1> <%= listTitle %>  </h1>
    </div>
    
    <div class="box">
            <% for(let i = 0; i < newListItem.length; i++ ) { %>
                <div class="item">
                    <input type="checkbox">
                    <p> <%= newListItem[i] %></p>
                </div>
            <% } %>
            <form action="/" method="post" class="item">
                <input type="text" name="newItem" id="newAct" placeholder="New Activity" autofocus autocapitalize="words" autocomplete="off">
                <button type="submit" name="list" id="submitBtn" value='<%= listTitle %>'>+</button>
            </form>
    </div>

    <script src="js/validation.js"></script>
<%- include('footer'); %> 